{
  "compilerOptions": {
    "allowJs": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": ["es6", "esnext"],
    "target": "es6"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", ".build"]
}
