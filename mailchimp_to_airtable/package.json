{
  "name": "@climatechangemakers/pg_to_airtable",
  "description": "Sync engagement data from pg back to Airtable",
  "main": "./index.js",
  "version": "0.2.0",
  "private": true,
  "engines": {
    "node": "14.4.0",
    "npm": "7.6.3"
  },
  "scripts": {
    "dev": "nodemon",
    "pretest": "shx rm -rf ./coverage ./.nyc_output",
    "testtodo": "npm run lint && npm run mocha",
    "mocha": "nyc mocha './test/**/*.spec.ts' './test/**/*.spec.js'",
    "lint": "tsc --noEmit && eslint 'src/**/*.{js,ts,tsx}' --quiet --fix"
  },
  "nodemonConfig": {
    "exec": "ts-node ./src/main.ts",
    "ext": "ts",
    "watch": [
      "src"
    ],
    "ignore": [
      "test/*"
    ]
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "test/",
      "dist/",
      "ts-dist/",
      "coverage/"
    ],
    "reporter": [
      "lcov"
    ],
    "all": true
  },
  "dependencies": {
    "@mailchimp/mailchimp_marketing": "3.0.36",
    "airtable": "0.10.1",
    "dotenv": "8.2.0",
    "lodash": "4.17.20",
    "moment": "2.29.1",
    "throat": "5.0.0"
  },
  "devDependencies": {
    "@types/moment": "2.13.0",
    "@types/node": "14.14.9",
    "@typescript-eslint/eslint-plugin": "4.8.2",
    "@typescript-eslint/parser": "4.8.2",
    "eslint": "7.14.0",
    "eslint-config-airbnb-typescript": "12.0.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.1.4",
    "husky": "4.3.0",
    "lint-staged": "10.5.1",
    "nyc": "15.1.0",
    "prettier": "2.2.0",
    "serverless-plugin-typescript": "1.1.9",
    "shx": "0.3.3",
    "source-map-loader": "1.1.2",
    "source-map-support": "0.5.19",
    "ts-node": "9.0.0",
    "typescript": "4.1.2"
  }
}
